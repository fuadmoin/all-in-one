<div class=" rounded-md bg-gray-100  p-3 ring-slate-200 shadow-sm ">
<% @categories.each do |category|%>

    <%= link_to category_items_path(category) do %>
    <div class="hover:bg-blue-500 bg-white flex items-center mb-6 pr-4 rounded-md shadow-lg">
    <img class="w-20 h-20 " src=<%= category.icon %> alt="picture of the category">
    <p class="ml-6 w-20"><%= category.name %></p>
    <p class="font-bold ml-12">Items: <%= category.items.count%> </p>
   </div>
    <% end %>

<% end %>

<%= link_to 'Add Category', add_new_category_path, class: " border-solid border-black hover:bg-blue-400 group flex items-center rounded-md bg-green-500 text-white text-sm font-medium pl-28 pr-3 py-2 shadow-sm"%>
</div>